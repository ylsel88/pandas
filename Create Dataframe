import pandas as pd
import numpy as np

df = pd.DataFrame(data={'TXC_YTD_AMT':[1,2,3,4],'RAT':['PV MTM','PV Cost','MCS','UMC']})

def TLE_value(c):
    if c['RAT'] == 'PV Cost':
        return df['TXC_YTD_AMT'].map(str)

df['TLE_value'] = df.apply(TLE_value, axis=1)
df['TLE_value'] = np.where(df['RAT'] == 'PV Cost', df['TXC_YTD_AMT'].map(str),'')
df
